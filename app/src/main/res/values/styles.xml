<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="NewsTitleTheme">
        <item name="maxLines">1</item>
        <item name="textAllCaps">false</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/text_size_12sp</item>
    </style>

    <style name="NewsArticleTheme">
        <item name="maxLines">2</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/text_size_12sp</item>
        <item name="android:padding">@dimen/dimen_10sp</item>
    </style>

    <style name="NoNewsTheme">
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/text_size_16sp</item>


    </style>
</resources>